{
  "compilerOptions": {
    "target": "es5",
    "moduleResolution": "node",
    "lib": [
      "dom",
      "es2015.promise",
      "es7"
    ],
    "types": [
      "node"
    ],
    "typeRoots": [
      "node_modules/@types"
    ]
  },
  "compileOnSave": true,
  "exclude": [
    "*/__tests__",
    "node_modules",
    "node_modules/**",
    "lib/**"
  ]
}