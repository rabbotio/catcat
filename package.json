{
  "name": "catcat",
  "version": "0.2.0",
  "description": "",
  "main": "index.js",
  "scripts": {
    "build": "tsc",
    "dev": "tsc -w",
    "serve": "wt serve index.js --secrets-file .env",
    "deploy": "wt create index.js --bundle --secrets-file .env",
    "prod": "npm run build && npm run deploy",
    "test": "jest --watchAll",
    "docker-build-tsc": "cd scripts/tsc && docker build -t tsc:latest . && docker image ls tsc",
    "docker-build": "docker build -t catcat:latest . && docker image ls catcat"
  },
  "author": "katopz",
  "license": "MIT",
  "devDependencies": {
    "@types/jest": "^21.1.8",
    "@types/node": "^8.0.54",
    "jest": "^21.2.1",
    "typescript": "^2.6.2"
  },
  "dependencies": {
    "body-parser": "^1.18.2",
    "cors": "^2.8.4",
    "es6-promise": "^4.1.1",
    "express": "^4.16.2",
    "helmet": "^3.9.0",
    "isomorphic-fetch": "^2.2.1",
    "util.promisify": "^1.0.0",
    "webtask-tools": "^3.2.0"
  },
  "jest": {
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js"
    ],
    "transform": {
      "^.+\\.(ts|tsx)$": "<rootDir>/scripts/preprocessor.js"
    },
    "testMatch": [
      "**/__tests__/*.test.ts"
    ]
  }
}
